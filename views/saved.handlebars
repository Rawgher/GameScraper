<article class="athelas">
    <div class="vh-75 dt w-100 tc bg-dark-gray white cover" style="background:url(/assets/images/keyboard.jpg) no-repeat center;">
        <div class="dtc v-mid">
            <h1 class="f1 f-headline-l fw1 i white-60">Saved Articles</h1>
        </div>
    </div>
</article>

<section class="mw7 center avenir">

    {{#unless news}}
    
    <div class="bt bb b--black-10">
        <p>Looks like you haven't saved any articles yet. Go check out the <a href="/" class="black">home</a> page and
            save some!</p>
    </div>
    {{/unless}}

    {{#each news}}

    {{#if saved }}
    <article class="bt bb b--black-10">

        <div class="flex flex-column flex-row-ns">
            <div class="pr3-ns mb4 mb0-ns w-100 w-40-ns">
                <a class="db pv4 ph3 ph0-l no-underline black dim" href='{{this.link}} target="_blank"'>
                    <img src="{{this.image}}" class="db" alt="Photo of a dimly lit room with a computer interface terminal.">
                </a>
            </div>
            <div class="w-100 w-60-ns pl3-ns">
                <a class="db mv3 ph3 ph0-l no-underline black dim" href='{{this.link}} target="_blank"'>
                    <h1 class="f3 fw1 baskerville mt0 lh-title">{{this.title}}</h1>
                </a>
                <p class="f6 lh-copy mv0 marginBot">{{this.description}}</p>
                <a class="f6 link dim br3 ph3 pv2 mb2 dib white bg-near-black" href="/read/{{this._id}}">Article Notes</a>
                <a class="f6 link dim br3 ph3 pv2 mb2 dib white bg-near-black" href="/delete/{{this._id}}">Delete
                    Article</a>
            </div>
        </div>
    </article>

    {{/if}}
    {{/each}}